<marquee direction="left" height="60px" bgcolor="purple" scrollamount="20" ><h1 style="color:hotpink;">   <- Welcome To Registration Page -> </h1></marquee>
<form action="/register" method="post" enctype="multipart/form-data">
    <div class="container mt-3 mb-5">
        <div class="row">
            <% if(status && message) { %>
                <div class="col-12">
                    <h3 class="text text-danger"><%= message; %></h3>
                </div>
            <%}%>
            <div class="col-8 offset-2">
                <div class="card">
                    <div class="card-header text-center" style="background-color:saddlebrown;">
                        <h2 class="text-primary">Registration Portal</h2>
                    </div>
                    <div class="card-body" style="background-color:darkgoldenrod;">
                        <div class="row">
                            <div class="col-12 mt-2 mb-3">
                                <label>First Name</label>
                                <input type="text" name="firstName" id="" class="form-control" required="required" />
                            </div>

                            <div class="col-12 mt-2 mb-3">
                                <label>Last Name</label>
                                <input type="text" name="lastName" id="" class="form-control" required="required" />
                            </div>

                            <div class="col-12 mt-2 mb-3">
                                <label>Email</label>
                                <input type="email" name="userEmail" id="" class="form-control" required="required" />
                            </div>

                            <div class="col-12 mt-2  mb-3">
                                <label>Contact</label>
                                <input type="number" name="contact" id="" class="form-control" required="required" />
                            </div>

                            <div class="col-12 mt-2  mb-3">
                                <label>Gender</label>
                                <input type="radio" name="gender" value="male" required="required" /> Male
                                <input type="radio" name="gender" value="female" /> Female
                            </div>

                            <div class="col-12 mt-2  mb-3">
                                <label>Profile Photo</label>
                                <input type="file" name="profile" id="profile" required="required"
                                    class="form-control" />
                            </div>

                            <div class="col-12 mt-2  mb-3">
                                <label>Password</label>
                                <input type="password" name="password" id="" class="form-control" required="required" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer" style="background-color:greenyellow;">
                        <div class="row">
                            <div class="col-4"></div>
                            <div class="col-4">
                        <button style="background-color:whitesmoke; font-size: large;" class="btn text-center" type="submit"><h5 style="color:chocolate;">Register</h5></button>
                            </div>
                            <div class="col-4"></div>
                        </div>
                     </div>
                </div>
            </div>
        </div>
    </div>
</form>